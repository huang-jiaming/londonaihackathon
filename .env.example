# Step 1 + Step 2 (Gemini / DeepMind partner)
GEMINI_API_KEY=your_gemini_api_key

# Optional: GitHub API token for higher rate limits during repo ingest
GITHUB_TOKEN=your_github_token

# Frontend -> backend URL for production (GitHub Pages frontend)
# Local dev can keep this empty to use same-origin /api routes.
NEXT_PUBLIC_API_BASE_URL=

# Step 3 (Dust partner)
DUST_API_KEY=your_dust_api_key
DUST_WORKSPACE_ID=your_dust_workspace_id
DUST_AGENT_ID=your_dust_agent_configuration_id

# Step 4 (CodeWords partner)
CODEWORDS_API_KEY=your_codewords_api_key
CODEWORDS_SERVICE_ID=your_codewords_service_id

# Step 4 delivery targets
GITHUB_ISSUES_TOKEN=your_fine_grained_github_token
GITHUB_ISSUES_OWNER=your_github_username_or_org
GITHUB_ISSUES_REPO=your_target_repo_name
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ
